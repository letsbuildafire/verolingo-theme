{% set style = header.banner.style|defined('light') %}
{% set classes = classes|defined(['default']) %}

{% set show_home = show_home|defined(false) %}
{% set show_subtitle = show_subtitle|defined(false) %}

<nav class="menu menu--{{style}} menu--{{classes|join(' menu--')}}">
    {% block before null %}
    {% for item in pages.children.visible if (not item.home or show_home) %}
    <a href="{{item.url}}" class="menu__item menu__item--link{% if page.url == item.url %} menu__item--active{% endif %}">
        <span class="menu__text">
            {{item.menu}} {% if page.url == item.url %}<span class="sr-only">({{'BASE.CURRENT'|t}})</span>{% endif %}
        </span>
        {% if show_subtitle and item.header.description %}
        <span class="menu__description">{{item.header.description}}</span>
        {% endif %}
    </a>
    {% endfor %}
    {% block after %}
        {% if config.plugins.langswitcher.enabled %}
            {% include 'components/dropdown--language.html.twig' %}
        {% endif %}
    {% endblock %}
</nav>
