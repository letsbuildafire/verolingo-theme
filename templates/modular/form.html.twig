{% set show_content = header.show_content|defined(true) %}
{% set show_title = header.show_title|defined(true) %}

{% set orientation = header.orientation|defined('left') %}

<section class="form form--{{orientation}} form--{{header.body_classes|default('default')|split(' ')|join(' form--')}}">
    <div class="form__panel">{% include "forms/form.html.twig" %}</div>
    {% if show_title or show_content %}
    <div class="form__body">
        {% if show_title %}
        <h2 class="form__title title">
            {% if header.icon %}<i class="title__icon material-icons">{{header.icon}}</i>{% endif %}
            <span class="title__text">{{header.title}}</span>
        </h2>
        {% endif %}
        {% if show_content %}<div class="form__text">{{content|markdown}}</div>{% endif %}
    </div>
    {% endif %}
</section>
