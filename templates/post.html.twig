{% extends 'layouts/base.html.twig' %}

{% set blog = page.find('/blog') %}

{% block navigation %}
    {% include 'components/menu-toggle.html.twig' with {'for': 'offcanvas'} %}
    {% embed 'components/menu.html.twig' with {'classes': ['nav', 'dark']} %}
        {% block before %}
            {% include 'components/branding.html.twig' with {'classes': ['default', 'dark']} %}
        {% endblock %}
        {% block after %}
            {% if config.plugins.langswitcher.enabled %}
                {% include 'partials/dropdown--language.html.twig' with {'classes':['menu__item']|merge(classes)} %}
            {% endif %}
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block content %}
    {{parent()}}
    <section class="content">
        {% if config.plugins.breadcrumbs.enabled %}
            {% include 'components/breadcrumbs.html.twig' %}
        {% endif %}

        {% include 'types/post.html.twig' with {
            'post': page,
            'title_size': 'h1'
        } %}

        {% include 'partials/next-previous.html.twig' %}
    </section>
    {{page.find('/partials/_random-posts').content}}
{% endblock %}

{% block footer %}
    {% if header.show_get_started_footer|defined(true) %}
        {{page.find('/partials/_get-started').content}}
    {% endif %}
    {% include 'partials/footer.'~grav.language.getActive~'.html.twig' %}
{% endblock %} 
